<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lu.nowina.nexu.view.ui.StoreResultController">

	<stylesheets>
		<URL value="@/styles/nexu.css" />
	</stylesheets>

        <top>
		<VBox BorderPane.alignment="CENTER">
			<children>
				<Label styleClass="message" text="If you want, NexU car remember those settings. Next time this Smartcard is connected, you don't need to enter the settings again. Do you want to store the settings ? " wrapText="true" />
			</children>
		</VBox>
        </top>

	<bottom>
		<HBox styleClass="btn-container" BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="forget" mnemonicParsing="false" styleClass="btn-default" text="Forget" />
				<Button fx:id="store" mnemonicParsing="false" styleClass="btn-primary" text="Store" />
			</children>
		</HBox>
	</bottom>
	<center>
		<VBox styleClass="form-container" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="label" text="Feedback" />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <CheckBox fx:id="publish" mnemonicParsing="false" text="Store to Common Server" />
               </children></VBox>
         </children>
		</VBox>
	</center>
</BorderPane>
