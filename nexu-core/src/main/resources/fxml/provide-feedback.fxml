<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lu.nowina.nexu.view.ui.ProvideFeedbackController">

	<stylesheets>
		<URL value="@/styles/nexu.css" />
	</stylesheets>

        <top>
		<VBox BorderPane.alignment="CENTER">
			<children>
				<Label styleClass="message" text="Help us improve NexU by providing some information about your Signature Product. " wrapText="true" />
			</children>
		</VBox>
        </top>

	<bottom>
		<HBox styleClass="btn-container" BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="cancel" mnemonicParsing="false" styleClass="btn-default" text="Cancel" />
				<Button fx:id="ok" mnemonicParsing="false" styleClass="btn-primary" text="Send" />
			</children>
		</HBox>
	</bottom>
	<center>
		<VBox BorderPane.alignment="CENTER" styleClass="form-container">
         <children>
            <Label fx:id="label" text="Feedback" />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="what" text="What happened ?" />
                  <TextArea fx:id="userComment" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
         </children>
		</VBox>
	</center>
</BorderPane>
